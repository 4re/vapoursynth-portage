From 8ae18b62e0260931b014e81d02df65e7090f4425 Mon Sep 17 00:00:00 2001
From: Holy Wu <HolyWu@users.noreply.github.com>
Date: Sun, 11 Nov 2018 16:23:41 +0800
Subject: [PATCH] configure: Fix --disable-opencl

Fixes https://github.com/4re/vapoursynth-portage/issues/82
---
 configure.ac | 7 +++++--
 1 file changed, 5 insertions(+), 2 deletions(-)

diff --git a/configure.ac b/configure.ac
index 6f315b0..d9f2843 100644
--- a/configure.ac
+++ b/configure.ac
@@ -18,7 +18,7 @@ OPENCLLDFLAGS="-lOpenCL"
 AS_CASE(
         [$host_cpu],
         [i?86], [BITS="32" X86="true"],
-        [x86_64], [BITS="64" X86="true"],
+        [x86_64], [BITS="64" X86="true"]
 )
 
 AS_CASE(
@@ -48,13 +48,16 @@ AS_IF(
 )
 
 
-AC_ARG_ENABLE([opencl], AS_HELP_STRING([--enable-opencl], [Enable the EEDI3CL filter. (default=yes)]))
+AC_ARG_ENABLE([opencl], AS_HELP_STRING([--enable-opencl], [Enable EEDI3CL filter (default=yes)]))
 AS_IF(
       [test "x$enable_opencl" != "xno"],
       [
        AC_DEFINE([HAVE_OPENCL])
 
        AC_SUBST([OPENCLLDFLAGS], ["-lboost_filesystem -lboost_system $OPENCLLDFLAGS"])
+      ],
+      [
+       OPENCLLDFLAGS=
       ]
 )
 
